page{
  font-family:"微软雅黑"; 
  background: white;
  box-sizing: border-box;
  position: fixed;
  top:0;
  right: 0;
  left: 0;
  bottom: 0;
}

.mask{
  width:100%;
  height:100%;
  position: fixed;
  z-index:999;
  background-color:rgba(15, 15, 26, 0.7);
}

.post {
    float: right;
    background-color: #ffffff;
    position: fixed;
    bottom: 6px;
    left: 10px;  
    border: 0 solid #ffffff;
    border-radius: 500px;
    box-shadow: 4px 1px 1px #cccccc;
    z-index: 1000;
}

.foodtemplate{
  height:50%
}

.blank{
  height:50%
}

.banner{
  font-size:26rpx;
}