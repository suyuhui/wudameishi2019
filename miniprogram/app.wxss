page{
  font-family:"微软雅黑"; 
  background: white;
  box-sizing: border-box;
  position: fixed;
  top:0;
  right: 0;
  left: 0;
  bottom: 0;
}

.post {
    float: right;
    background-color: #ffffff;
    position: fixed;
    bottom: 6px;
    right: 10px;  
    border: 0 solid #ffffff;
    border-radius: 500px;
    box-shadow: 4px 1px 1px #cccccc;
    z-index: 1000;
}